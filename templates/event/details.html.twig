{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}
<div class ="container">
    <div class="card mb-4 mt-4" style="max-width: 1500px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ event.image }}" class="img-fluid rounded-start  h-100" width="100%" alt="...">
                </div>
                <div class="col-8">
                <div class="card-body">
                    <h1 class="card-title">{{ event.name }}</h1>
                    <p class="card-text"><span class="text-info fs-5">Description : </span>{{ event.description }}</p>
                    <p class="card-text"><span class="text-info fs-5">Capacity : </span>{{ event.capacity }}</p>
                    <p class="card-text"><span class="text-info fs-5">Email : </span>{{ event.email }}</p>
                    <p class="card-text"><span class="text-info fs-5">Phone Number : </span>{{ event.phonenumber }}</p>
                    <p class="card-text"><span class="text-info fs-5">Street Name : </span>{{ event.streetname }}</p>
                    <p class="card-text"><span class="text-info fs-5">ZIP code : </span>{{ event.zip }}</p>
                    <p class="card-text"><span class="text-info fs-5">City : </span>{{ event.city }}</p>
                    <p class="card-text"><span class="text-info fs-5">Type : </span>{{ event.type }}</p>
                    <p class="card-text"><span class="text-danger fs-5">Start : </span>{{ event.StartDate|date('F j, Y, g:i a')}}</p>
                    <p class="card-text"><span class="text-danger fs-5">End : </span>{{ event.EndDate|date('F j, Y, g:i a')}}</p>
                    <a href="/edit/{{event.id}}" class="btn btn-dark">Edit</a>
                    <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
                    <a href="/" class="btn btn-warning">Home</a>
                </div>
            </div>
        </div>
            <div style="width: 100%"><iframe width="100%" height="600" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=Wien+(Wien)&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed"><a href="https://www.maps.ie/distance-area-calculator.html">measure acres/hectares on map</a></iframe></div>    
    </div>
</div>

{% endblock %}