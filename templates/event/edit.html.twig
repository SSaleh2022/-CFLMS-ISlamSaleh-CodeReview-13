{% extends 'base.html.twig' %}

{% block title %}Edit{% endblock %}

{% block body %}
<div class="container">
    <div class="row mt-4 mb-4">
        <div class="card mb-3 shadow-lg" style="max-width: 1200px;">
                <div class="card-body">
                    <p class="fw-bold fs-2">Edit Your Event</p>
                    {{form_start(form)}}
                    {{form_widget(form)}}
                    <button class="btn btn-success mt-3">{{ button_label|default('Edit') }}</button>
                    {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}