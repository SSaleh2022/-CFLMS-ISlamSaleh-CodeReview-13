{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
    {{ message }}
    </div>
{% endfor %}
<div class ="container mt-4 mb-4">
    <div class ="row">
        {%for event in events %}
                <div class ="col-lg-4 col-md-6 col-sm-12 p-3">
                    <div class ="card" style="width: 18rem;">
                        <img src="{{ event.image }}" class="card-img-top" alt="...">
                        <div class="card-body shadow-lg">
                            <h3 class="card-title text-danger">{{ event.name }}</h3>
                            <p class="card-title"><span class="text-info fs-5">Start : </span>{{ event.StartDate|date('F j, Y, g:i a')}}</p>
                            <p class="card-title"><span class="text-info fs-5">End : </span>{{ event.EndDate|date('F j, Y, g:i a')}}</p>
                            <p class="card-text"><span class="text-info fs-5">Description : </span>{{ event.description }}</p>
                            <a href="/details/{{event.id}}" class="btn btn-warning">Details</a>
                        </div>
                    </div>
                </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
